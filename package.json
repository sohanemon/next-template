{
  "name": "my-app",
  "description": "Minimal Next.js app with Tailwind CSS and Typescript",
  "license": "MIT",
  "icon": "favicon.png",
  "version": "1.0.0",
  "author": "Sohan Emon <sohanemon@outlook.com>",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev"
  },
  "dependencies": {},
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "^2.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write .",
      "turbo check-types"
    ]
  },
  "packageManager": "pnpm@10.11.0"
}
