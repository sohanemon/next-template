{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/.next/**",
      "!**/build/**",
      "!**/styles/utilities.css"
    ]
  },
  "assist": {
    "actions": {
      "source": {
        "recommended": true
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "includes": ["**", "!**/styles/utilities.css"]
  },
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "noAriaUnsupportedElements": "warn",
        "useButtonType": "off",
        "useAltText": "off"
      },
      "correctness": {
        "noChildrenProp": "error",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error",
        "useJsxKeyInIterable": "error"
      },
      "complexity": {
        "noBannedTypes": "off"
      },
      "security": {
        "noDangerouslySetInnerHtmlWithChildren": "error",
        "noBlankTarget": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noCommentText": "error",
        "noArrayIndexKey": "info",
        "noDuplicateJsxProps": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "warn",
          "options": {
            "attributes": ["classList", "wrapperClassName", "wrapperClass"],
            "functions": ["clsx", "cva", "cn", "tw", "tw.*"]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
